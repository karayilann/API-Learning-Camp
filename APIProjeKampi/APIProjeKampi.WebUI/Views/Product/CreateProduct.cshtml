@model CreateProductDto

@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Ürün Ekleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">

                            <label>Ürün Adı : </label>
                            <input type="text" asp-for="ProductName" class="form-control" />
                            <br />

                            <label>Ürün Fiyatı : </label>
                            <input type="number" asp-for="Price" class="form-control" />
                            <br />

                            <label>Ürün Kategorisi : </label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryList">
                                <option value=""> --Kategori Seçiniz--</option>
                            </select>
                            <br />

                            <label>Ürün Görsel URL : </label>
                            <input type="text" asp-for="ImageURL" class="form-control" />
                            <br />

                            <label>Ürün Açıklaması : </label>
                            <br />
                            <textarea class="form-control" asp-for="ProductDescription" cols="80" rows="3"></textarea>
                            <br />
                            <br />


                            <button class="btn btn-primary">Ürün Oluştur </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>